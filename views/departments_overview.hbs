
{{> header }}

<h1>Departemen</h1>

{{> show_flash_messages }}

<div class="row">
  <div class="col-md-4 lead">Semua departemen</div>
  <div class="col-md-4 col-md-offset-4">
    <button class="btn btn-info pull-right" data-toggle="modal" data-target="#add_new_department_modal" type="button" id="add_new_department_btn">Tambahkan departemen baru</button>
  </div>
</div>


<div class="row">&nbsp;</div>


{{# unless departments.length }}
<div class="row">
    <div class="col-md-4">Tidak ada data departemen</div>
</div>
{{/unless}}

<div class="row">

  <div class="col-md-12">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Nama</th>
          <th>Manajer</th>
          <th>Jatah Cuti</th>
          <th>Banyaknya Karyawan</th>
          <th>Hari Libur Nasional
            <button type="button"
              class="btn btn-xs btn-link"
              data-content="Jika disetel YA, hari libur nasional akan ditambahkan di atas jatah cuti karyawan departemen"
              data-placement="top"
              data-toggle="popover"
              data-trigger="focus hover"
            >
              <span class="fa fa-question-circle"> </span>
            </button>
          </th>
          <th>Jatah Cuti Terakumulasi
            <button type="button"
              class="btn btn-xs btn-link"
              data-content="Jika disetel YA, jatah cuti liburan terus bertambah - atau terakumulasi - sejak hari pertama kerja. Jatah cuti terakumulasi secara proporsional terhadap jatah tahunan. Cth. seorang karyawan pada bulan kerja kesembilan akan telah mengumpulkan 9/12 (atau tiga perempat) jatah tahunan."
              data-placement="top"
              data-toggle="popover"
              data-trigger="focus hover"
            >
              <span class="fa fa-question-circle"> </span>
            </button>
          </th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        {{#each departments}}
        <tr data-vpp-department-list-mode="readonly">
          <td><a href="/settings/departments/edit/{{this.id}}/" data-vpp-department-name=1>{{this.name}}</a></td>
          <td><a href="/users/edit/{{this.boss.id}}/">{{# with this.boss }}{{this.full_name }}{{/with}}</a></td>
          <td>
            {{#each ../allowance_options}}{{#if_equal this.value ../allowance}}{{caption}}{{/if_equal}}{{/each}}
          </td>
          <td><a href="/users/?department={{ this.id }}">{{this.users.length}}</a></td>
          <td>{{# if this.include_public_holidays }}Ya{{/if}}</td>
          <td>{{# if this.is_accrued_allowance }}Ya{{/if}}</td>
          <td><a href="/settings/departments/edit/{{this.id}}/" class="btn btn-link btn-xs pull-right"><span class="fa fa-chevron-right"></span></a></td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

</div>

{{> add_new_department_modal
  container_id='add_new_department_modal'
  form_action='/settings/departments/'
}}

{{> footer }}
